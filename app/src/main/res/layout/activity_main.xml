<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp">

    <!-- Nested Views Go Here -->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:orientation="horizontal"
                  android:paddingLeft="130dp"
    >
        <!--Score Text View-->
        <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/score_str"
                android:textSize="24sp"
                android:text="Score:"
        />

        <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:id="@+id/score_text_view"
                tools:text="#"
                android:textSize="24sp"
        />

    </LinearLayout>

    <!--Question Text View-->
    <TextView android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:id="@+id/question_text_view"
              app:autoSizeTextType="uniform"
              tools:text="Question Text will display here"
              android:padding="5dp"
              android:layout_gravity="center"
    />


<RelativeLayout android:layout_width="match_parent"
                android:layout_height="100dp"
>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="100dp"
                  android:orientation="horizontal"
                  android:gravity="center"
    >
        <!--True Button-->
        <Button android:layout_width="120dp"
                android:layout_height="80dp"
                android:id="@+id/true_button"
                android:textSize="24sp"
                android:text="True"
                android:layout_margin="20dp"
                android:background="#03FCB6"
                android:visibility="invisible"
        />
        <!--False Button-->
        <Button android:layout_width="120dp"
                android:layout_height="80dp"
                android:id="@+id/false_button"
                android:textSize="24sp"
                android:text="False"
                android:layout_margin="20dp"
                android:background="#03FCB6"
                android:visibility="invisible"
        />
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="100dp"
                  android:orientation="horizontal"
                  android:gravity="center"
    >
        <!--1st Button-->                        <!-- Multiple Choice-->
        <Button android:layout_width="90dp"
                android:layout_height="80dp"
                android:id="@+id/first_button"
                android:textSize="16sp"
                android:text="Banana"
                android:layout_margin="1dp"
                android:background="#03FCB6"
                android:visibility="visible"
        />
        <!--2nd Button-->
        <Button android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/second_button"
                android:textSize="16sp"
                android:text="Orange"
                android:layout_margin="1dp"
                android:background="#03FCB6"
                android:visibility="visible"
        />

        <!--3rd Button-->
        <Button android:layout_width="90dp"
                android:layout_height="80dp"
                android:id="@+id/third_button"
                android:textSize="16sp"
                android:text="Apple"
                android:layout_margin="1dp"
                android:background="#03FCB6"
                android:visibility="visible"
        />
        <!--4th Button-->
        <Button android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/fourth_button"
                android:textSize="16sp"
                android:text="Pear"
                android:layout_margin="1dp"
                android:background="#03FCB6"
                android:visibility="visible"
        />
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="100dp"
                  android:gravity="center"
                  android:layout_marginLeft="10dp"
    >
        <EditText android:layout_width="170dp"
                  android:layout_height="wrap_content"
                  android:inputType="text"
                  android:ems="25"
                  android:hint="Answer here!"
                  android:visibility="invisible"
                  android:id="@+id/blank_box"
        />
        <Button android:layout_width="100dp"
                android:layout_height="45dp"
                android:id="@+id/submit_button"
                android:text="Submit"
                android:visibility="invisible"
                android:background="#4287f5"
        />
    </LinearLayout>

</RelativeLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="100dp"
                  android:gravity="center"
    >
        <Button android:layout_width="160dp"
                android:layout_height="80dp"
                android:id="@+id/previous_button"
                android:textSize="24sp"
                android:text="Previous"
                android:layout_margin="10dp"
                android:background="#42F5E3"
        />

        <Button android:layout_width="160dp"
                android:layout_height="80dp"
                android:id="@+id/next_button"
                android:textSize="24sp"
                android:text="Next"
                android:layout_margin="10dp"
                android:background="#42F5E3"
        />
    </LinearLayout>

</LinearLayout>